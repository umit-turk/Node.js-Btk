<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
   <%- include('../../views/partials/_nav.ejs') -%>

    <div class="container pt-100" >
      <div class="row">

        <div class="col-lg-12">
          <% if(orders.length > 0) { %>
            
            
                  
            
            <% orders.forEach(order => {  %>
            
                <div class="card mb-5">
                  <div class="card-header">
                    <h3>order id: #<%= order.id %></h3>
                    <table>
                      <thead>
                        <tr>
                          <th>Image</th>
                          <th>Product Name</th>
                          <th>Price</th>
                          <th>Quantity</th>
                        </tr>
                      </thead>
                     <tbody>
                      <% order.products.forEach(product => { %>
                       <tr>
                        <td>
                          <img src="/img/<%= product.imageUrl %>" width="80" alt="">
                        </td>
                        <td><%= product.name %></td>
                        <td><%= product.orderItem.quantity %></td>
                        <td><%= product.orderItem.price %></td>
                       </tr>
                       <tfoot>
                        
                        <tr>
                          <td colspan="2">date: <%= order.createdAt.toDateString() %> </td>
                          <% order.products.forEach(product => { %>
                            <td>
                             price: 
                              <%=  product.price * product.orderItem.quantity %> 
                            </td>
                          <% }) %>
                        </tr>
                        
                         
                          
                        

                       </tfoot>
                      <% }) %>
                     </tbody>
                    
                      
                    </table>
                  </div>
                </div>
                <% }) %>

               

           <% } %>

            <% if(orders.length === 0) { %>
              <h1>No orders</h1>
            <% } %>

        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/1c101fa5da.js" crossorigin="anonymous"></script>
  </body>
</html>
